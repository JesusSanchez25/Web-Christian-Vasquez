---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Especialidad from '../components/especialidad.astro';
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Zilla+Slab+Highlight:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inika:wght@400;700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">

<Layout title="Christian Rios">
	<Header />
	 <!-- HERO -->
	<section class="seccion-hero">
		<img src="../public/piano-hero.jpeg" class="hero-image" alt="piano">
		<div class="hero-text">
			<h1 class="hero-main-text">CHRISTIAN RÍOS <br>PRODUCTOR MUSICAL</h1>
			<h3 class="hero-secondary-text">En búsqueda de experiencia laboral y de expandir mis conocimientos, siéntete libre de ponerte en contacto conmigo si te interesa. </h3>
		</div>
	</section>

	<section class="seccion-especialidades">
		<h1 class="main-tittle">Especialidades</h1>
		<div class="especialidades-container">
			<Especialidad imagen="public/piano-hero.jpeg" titulo="Productor musical" body="Lor" />
			<Especialidad imagen="public/img-compositor.jpg" titulo="Compositor" body="prueba" />
			<Especialidad imagen="public/img-profesor-musica.jpg" titulo="Profesor de música" body="prueba" />
			<Especialidad imagen="public/img-interprete-piano.jpg" titulo="Intérprete de piano" body="prueba" />
		</div>
	</section>


</Layout>

<style>
				/* HERO  */
.seccion-hero {
	position: relative;
  height: 100svh;
  width: 100svw;

  .hero-image {
    position: absolute;
    height: 100%;
    width: 100%;
    object-fit: cover;
    z-index: 1;
    object-position: 30% 0px;
  }

  .hero-text {
    position: relative;
		width: max(450px,30vw);
    z-index: 2;
		padding-top: 30vh;
		padding-left: 15vh;

    .hero-main-text {
      font-family: "Zilla Slab Highlight";
      color: white;
			margin: 0;
			font-size: clamp(26px,4vw, 34px);
    }

    .hero-secondary-text {
			margin-top: 20px;
    }
  }
}

@media (max-width: 900px) {
	.seccion-hero {
		display: flex;
		flex-direction: column;
		align-items: center;

  .hero-text {
		width: min(80vw, 500px);
		padding-left: 0vh;

		.hero-main-text{
			font-size: clamp(26px,5.4vw, 40px);
			text-align: center;
		}

		.hero-main-text br{
			display: block;
		}
  }
}

}

		/* ESPECIALIDADES  */
.seccion-especialidades {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100svw; 
	height: 500px;

	.especialidades-container {
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		width: 100%;
		padding: 15vh;
		box-sizing: border-box;
		gap: 2rem;

	}	
}

@media (max-width: 700px){
}
</style>
