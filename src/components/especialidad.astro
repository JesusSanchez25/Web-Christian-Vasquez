---
interface Props {
  imagen: string;
  titulo: string;
  body: string;
}
const { imagen, titulo, body } = Astro.props;
---

<div class="especialidad-container">
  <div class="image-container" data-imagen={imagen}>
    <h1>{titulo}</h1>
  </div>

  <div class="text-container">
    <p>{body}</p>
    <p>Saber m√°s</p>
  </div>
</div>

<style>
  .especialidad-container {
    display: flex;
    flex-direction: column;
    width: 47%;
    background-color: aliceblue;
    border-radius: 20px;
    box-shadow: 3px 3px 8px rgb(190, 190, 190);

    .image-container {
      width: 100%;
      box-sizing: border-box;
      padding: 1rem;
      display: flex;
      align-items: center;
      background-size: cover;
      background-position: center;
      border-radius: 20px 20px 0 0;

      h1 {
        margin: 0;
        font-family: Lexend, sans-serif;
        font-weight: 500;
        color: white;
        text-shadow: 2px 0 black, -2px 0 black, 0 2px black, 0 -2px black,
                     1px 1px black, -1px -1px black, 1px -1px black, -1px 1px black;
      }
    }

    .text-container {
      height: 100%;
      display: flex;
      flex-direction: column;
      padding: 1rem;
      box-sizing: border-box;

      p {
        font-size: 0.85rem;
      }

      p:nth-of-type(2) {
        margin-top: auto;
        padding-top: 1rem;
        cursor: pointer;
      }
    }
  }

  @media (max-width: 700px) {
    .especialidad-container {
      width: 100%;

      .text-container {
        p {
          font-size: 0.7rem;
        }
      }
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Seleccionar el elemento que contiene la clase 'image-container'
    const imageContainers = document.querySelectorAll('.image-container');
    
    // Iterar sobre cada uno de los elementos y aplicar el estilo de fondo
    imageContainers.forEach(container => {
      // Obtener el valor del atributo data-imagen
      const imagen = container.getAttribute('data-imagen');
      
      // Aplicar el estilo de background-image
      container.style.backgroundImage = `url(${imagen})`;
    });
  });
</script>
