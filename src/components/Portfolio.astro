---
import Cancion from './cancion.astro';
---

<main>
  <h1 class="main-tittle">Portfolio</h1>
  <div class="main-container">
    <div class="main-text-container">
      <h1 class="hero-main-text">Instrumentales</h1>
      <h3>Canciones compuestas y producidad por mí, las cuales representan mi trabajo y orgullo</h3>
    </div>
    <div class="songs-container">
      <Cancion nombre="Canción de ejemploooo" generos="de ejemplo para prueba de ejemp" imagen="/WhatsApp Image 2024-07-01 at 22.32.14 (4).jpeg" cancion="public/sounds/pipe.mp3"/>

      <Cancion nombre="Canción de ejemploooo" generos="de ejemplo para prueba de ejemp" imagen="/WhatsApp Image 2024-07-01 at 22.32.14 (4).jpeg" cancion="public/sounds/pipe.mp3"/>

      <Cancion nombre="Canción de ejemploooo" generos="de ejemplo para prueba de ejemp" imagen="/WhatsApp Image 2024-07-01 at 22.32.14 (4).jpeg" cancion="public/sounds/pipe.mp3"/>

      <Cancion nombre="Canción de ejemplooooaaaaaaaa" generos="de ejemplo para prueba de ejemp" imagen="/WhatsApp Image 2024-07-01 at 22.32.14 (4).jpeg" cancion="public/sounds/pipe.mp3"/>

      <Cancion nombre="Canción de ejemploooo" generos="de ejemplo para prueba de ejemp" imagen="/WhatsApp Image 2024-07-01 at 22.32.14 (4).jpeg" cancion="public/sounds/pipe.mp3"/>

    </div>
  </div>
</main>

<style>
  .main-container{
    width: 100svw;
    padding-inline: min(15vh, 12vw);
    padding-block: 2rem;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: min(8vh, 12vw);
    background:url("img-portfolio.jpg");
    background-size: cover;

    .main-text-container{
      box-sizing: border-box;
      width: 50%;
      .hero-main-text{
        font-size: clamp(1.5rem,3.2vw,3rem);
      }

    }

    .songs-container{
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 900px) {
    .main-container{
      flex-direction: column;
      padding-block: 3rem;
    .main-text-container{
      width: 100%;
      .hero-main-text{
        text-align: center;
        margin-bottom: 1rem;
      }
    }

    .songs-container{
      width: 100%;
    }
  }
}
</style>
